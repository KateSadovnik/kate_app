<h2>New Item</h2>

<%= form_for(@item) do |f| %>
  
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </div>

  
  <div class="actions">
    <%= f.submit "Create" %>
  </div>
<% end %>


